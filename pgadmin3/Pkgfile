# Description: PostgreSQL administration gui frontend
# URL: http://www.pgadmin.org/
# Maintainer: Mikhail Kolesnik, mike at openbunker dot org
# Depends on: wxgtk postgresql

name=pgadmin3
version=1.10.3
release=1
source=(ftp://ftp9.de.postgresql.org/unix/databases/postgresql/pgadmin3/release/v$version/src/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
				--with-wx-version=2.8
	make
	make DESTDIR=$PKG install
	find $PKG/usr/share/pgadmin3/docs/* ! -wholename "*en_US*" | xargs rm -rf
	find $PKG/usr/share/pgadmin3/i18n/* -type d | xargs rm -rf
}
