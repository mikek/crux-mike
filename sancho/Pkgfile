# Description: A java GUI for p2p cores
# URL: http://sancho-gui.sourceforge.net/
# Maintainer: Mikhail Kolesnik, mike at openbunker dot org
# Depends on: jre gtk mldonkey

name=sancho
version=0.9.4-59
release=1
#source=(http://dl.sourceforge.net/sourceforge/$name/$name-$version-linux-gtk.sh
source=(http://repository.slacky.eu/slackware-12.1/network/$name/$version/src/$name-$version-linux-gtk.sh
		sancho.sh)

build() {
	/bin/sh $name-$version-linux-gtk.sh --target .
	mkdir -p $PKG/usr/{bin,lib/sancho}
	mv $name $PKG/usr/lib/$name
	mv lib/* $PKG/usr/lib/$name
	install -m 755 sancho.sh $PKG/usr/bin/sancho
}
