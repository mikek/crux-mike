# Description: A daemon which implements the PPP protocol for internetworking over dialup lines
# URL:         http://www.samba.org/ppp/
# Maintainer:  Mikhail Kolesnik, mike at openbunker dot org
# Depends on:  zlib openssl libpcap

# nice to have: libpcap

name=ppp
version=2.4.4
release=1
source=(ftp://ftp.samba.org/pub/ppp/$name-$version.tar.gz \
		$name-$version-cb.patch \
		$name-$version-nofilter.patch \
		$name-$version-makefile.patch)

build() {
	cd $name-$version
	patch -p1 -i $SRC/$name-$version-cb.patch
	#patch -p1 -i $SRC/$name-$version-nofilter.patch
	patch -p1 -i $SRC/$name-$version-makefile.patch
	./configure --prefix=/usr --sysconfdir=/etc
	make
	make INSTROOT=$PKG install install-etcppp
	mv $PKG/usr/{share/man,man} && rm -r $PKG/usr/share
	chmod +w -R $PKG
}
