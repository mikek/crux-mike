# Description: Smart Link soft modem driver for linux
# URL: http://linmodems.technion.ac.il/packages/smartlink/
# Maintainer: Mikhail Kolesnik, mike at openbunker dot org
# Depends on: alsa-lib

name=slmodem
version=2.9.11-20080629
release=1
source=(http://linmodems.technion.ac.il/packages/smartlink/$name-$version.tar.gz \
		slmodemd)

build() {
	cd $name-$version
	make SUPPORT_ALSA=1
	mkdir -p $PKG/var/lib/slmodem
	install -m 755 -D $SRC/slmodemd $PKG/etc/rc.d/slmodemd
	install -m 755 -D modem/slmodemd $PKG/usr/sbin/slmodemd
}
